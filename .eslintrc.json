{
  "extends": ["next", "prettier"],
  "plugins": ["unicorn"],
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "args": "after-used",
        "caughtErrors": "none",
        "ignoreRestSiblings": true,
        "vars": "all"
      }
    ],
    "@next/next/no-img-element": "off",
    "prefer-const": "error",
    "react-hooks/exhaustive-deps": "error",
    "no-console": "warn",
    "no-useless-catch": "off"
  }
}
